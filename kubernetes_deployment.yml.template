# This template file will have its environment variables expanded
# and the .template extension removed by the bash-template Wercker step.
# See wercker.yml.

apiVersion: apps/v1
kind: Deployment
metadata:
  name: orcl-ws-app
  labels:
    commit: ${WERCKER_GIT_COMMIT}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: orcl-ws-app
  template:
    metadata:
      labels:
        app: orcl-ws-app
        commit: ${WERCKER_GIT_COMMIT}
    spec:
      containers:
      - name: orcl-ws-srv
        image: ${DOCKER_REPO}:${WERCKER_GIT_COMMIT}
        ports:
        - name: orcl-ws-srv
          containerPort: 8080
          protocol: TCP
      imagePullSecrets:
      - name:  ${OKE_IMAGESECRET}
